<div class="well well-lg">
  <h4 class="blue">book detail</h4>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> bookmarked </label>
        <td class="text-center">
          <input type="checkbox" class="checkbox" data-isbn="{{document.isbn}}"
            {{#if bookMarked}}
                 checked
            {{/if}}
          />
        </td>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> title </label>
        <label class="col-md-7 ">{{document.title}}</label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> authors </label>
        <label class="col-md-7 ">
            {{document.authors}}
        </label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> translators </label>
          <label class="col-md-7 ">{{document.translators}}</label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> barcode </label>
        <label id="name" class="col-md-7 ">{{document.barcode}}</label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> category </label>
        <label id="name" class="col-md-7 ">{{document.category}}</label>

      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> contents </label>
        <label id="name" class="col-md-7 ">{{document.contents}}</label>

      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> price </label>
        <label id="name" class="col-md-7 ">{{document.price}}</label>

      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> sale_price </label>
        <label id="name" class="col-md-7 ">{{document.sale_price}}</label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> status </label>
        <label id="name" class="col-md-7 ">{{document.status}}</label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label for="user-name3" class="col-md-3"> thumbnail </label>
        <img src="{{document.thumbnail}}">
      </div>
    </div>
  </div>
</div>

