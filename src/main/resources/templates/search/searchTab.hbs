<div class="panel panel-primary" style="padding: 1px">
  <div class="panel-heading">
    <h2 class="panel-title">searchTab</h2>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3"> SearchTarget </label>
        <select id="searchTargetSelect" class="col-md-1">
          {{#each searchTargetNames }}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-3"> SearchSort </label>
        <select id="searchSortSelect" class="col-md-1">
          {{#each searchSortNames }}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <label class="col-md-2"><input type="text" id="query" placeholder="검색어"></label>
        <label class="col-md-2"><input type="text" id="page" placeholder="page(1~50)"></label>
        <label class="col-md-2"><input type="text" id="size" placeholder="size(10~50)"></label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group row">
        <button type="button" id="searchButton" onclick="search()">검색</button>
      </div>
    </div>
  </div>


</div>


