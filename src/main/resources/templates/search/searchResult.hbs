<div class="panel panel-primary" style="padding: 1px">
  <div class="panel-heading">
    <h2 class="panel-title">search result</h2>
  </div>
  <table class="table table-striped table-hover table-bordered">
    <thead class="thead-strong">

    <th>title</th>
    <th>authors</th>
    <th>sale_price</th>
    <th>status</th>
    <th>date</th>
    <td>detail</td>
    </thead>
    <tbody>
    {{#each bookSearchResult.documents}}
      <tr>
        <td class="text-center">{{this.title}}</td>
        <td class="text-center">{{this.authors}}</td>
        <td class="text-center">{{this.sale_price}}</td>
        <td class="text-center">{{this.status}}</td>
        <td class="text-center">{{this.datetime}}</td>
        <td>
          <button type="button" onclick="detail('{{this.isbn}}')" class="btn btn-primary detail-button">
            Detail
          </button>
        </td>

      </tr>
    {{/each}}
    </tbody>
  </table>
</div>